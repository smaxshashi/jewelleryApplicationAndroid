<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#EBE292"
    tools:context=".MarketPrice">

    <!-- Heading -->
    <TextView
        android:id="@+id/marketPriceHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gold And Silver Market Prices"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/maroon"
       android:layout_gravity="center"
        android:fontFamily="serif"

        android:layout_marginBottom="@dimen/_8sdp"/>

    <!-- Subheading -->
    <TextView
        android:id="@+id/marketPriceSubheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Prices Updated Regularly"
        android:textSize="18sp"
        android:textColor="#555555"

        />

    <!-- Information Text -->
    <TextView
        android:id="@+id/marketPriceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay updated with the latest market trends for gold and silver. Track daily price fluctuations, historical data, and forecasts to make informed investment decisions."
        android:textSize="16sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/marketPriceSubheading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@color/maroon"
        android:padding="@dimen/_10sdp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="METAL'S"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24K"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="22K"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18K"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="14K"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUserHomeFragmentListmaket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>
