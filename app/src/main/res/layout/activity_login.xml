<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacjllog"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <ImageView
        android:id="@+id/ivSplashScreenAppLogo"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:src="@drawable/applogo" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        app:cardCornerRadius="12sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16sp"
                android:fontFamily="serif"
                android:text="Log In"
                android:textColor="@color/maroon"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvslogen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:fontFamily="cursive"
                android:text="Shin Bright with exclusive Jewellers"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="20sp"
                android:text="Phone Number"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etLoginActivityPhonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="16sp"
                android:background="@drawable/edittextbackground"
                android:hint="+91"
                android:inputType="number"
                android:padding="12sp"
                android:textColor="@color/black" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbtnLoginActivityLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="16sp"
                android:background="@color/maroon"
                android:text="Log In"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbtnLoginActivityCancleLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="16sp"
                android:layout_marginBottom="16sp"
                android:background="@drawable/buttonbackground"
                android:text="Skip"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvLoginActivityNewuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:text="Didn't have accout? | Click here"
                android:textColor="@color/blue"
                android:textSize="16sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>