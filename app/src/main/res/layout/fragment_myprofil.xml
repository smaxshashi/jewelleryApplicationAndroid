<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Edit Photo Icon -->
    <ImageButton
        android:id="@+id/editPhotoButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_edit_24"
        android:background="@android:color/transparent"
        app:tint="#2196F3"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"
        app:layout_constraintEnd_toEndOf="@id/profileImage"
        android:contentDescription="Edit Photo" />

    <!-- User Name -->
    <TextView
        android:id="@+id/tvuserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parth Dahapute"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Bansal Jewellers Pvt Ltd"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="#800000"
        app:layout_constraintTop_toBottomOf="@id/tvuserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        android:id="@+id/detailsLayout"
        android:layout_marginTop="16dp">

        <!-- Labels and Values -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/emailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/dobLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/dobValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginStart="5dp"
                android:layout_gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/spouseDobLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spouse DOB:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/spouseDobValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginStart="5dp"
                android:layout_gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/addressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/addressValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/pincodeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/pincodeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Add Email Button -->
    <Button
        android:id="@+id/addEmailButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Email"
        android:backgroundTint="@color/maroon"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        app:cornerRadius="25dp"
        app:layout_constraintTop_toBottomOf="@id/detailsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
