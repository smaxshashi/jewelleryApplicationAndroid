<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- HIM Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvHomeFragmentHIM"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_160sdp"
        app:cardCornerRadius="12sp"
        app:cardElevation="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cvHomeFragmentHER"
        app:layout_constraintHorizontal_chainStyle="packed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/marronbackline">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imgmen"
                android:scaleType="fitXY" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEN'S"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textColor="@color/maroon"
        android:background="@drawable/goldenlineback"
        android:padding="8sp"
        app:layout_constraintTop_toBottomOf="@id/cvHomeFragmentHIM"
        app:layout_constraintStart_toStartOf="@id/cvHomeFragmentHIM"
        app:layout_constraintEnd_toEndOf="@id/cvHomeFragmentHIM" />

    <!-- HER Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvHomeFragmentHER"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_160sdp"
        app:cardCornerRadius="12sp"
        app:cardElevation="12sp"
        app:layout_constraintTop_toTopOf="@id/cvHomeFragmentHIM"
        app:layout_constraintBottom_toBottomOf="@id/cvHomeFragmentHIM"
        app:layout_constraintStart_toEndOf="@id/cvHomeFragmentHIM"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_8sdp"
   >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/marronbackline">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imgwomen"
                android:scaleType="fitXY" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WOMEN'S"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textColor="@color/maroon"
        android:background="@drawable/goldenlineback"
        android:padding="8sp"
        app:layout_constraintTop_toBottomOf="@id/cvHomeFragmentHER"
        app:layout_constraintStart_toStartOf="@id/cvHomeFragmentHER"
        app:layout_constraintEnd_toEndOf="@id/cvHomeFragmentHER" />

</androidx.constraintlayout.widget.ConstraintLayout>
